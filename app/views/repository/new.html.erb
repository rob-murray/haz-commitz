<% provide(:title, 'Rate repository / Haz Commitz') %>

<div class="container">
  <div class="section">

    <div class="row">
      <div class="col s12">
        <h3>Get a repository rating</h3>

        <div class="row">
          <div class="col s12">
            <p>Get a Haz Commitz rating and badge about your GitHub repository entering your GitHub user name and repo name.</p>

            <% if flash[:error] %>
              <div class="form-errors">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>

            <%= form_for @repo, url: { action: 'create' } do |f| %>
              <div class="row">
                <div class="input-field col s12">
                  <%= f.text_field :path, autofocus: true, placeholder: "Enter GitHub repository: user-name/repository-name" %>
                </div>
                <div class="input-field col s12">
                  <%= button_tag type: "submit", class: 'btn waves-effect blue darken-2' do %>
                    Rate
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
